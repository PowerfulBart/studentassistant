    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!--<ImageView-->
            <!--android:id="@+id/iv_add_avatar"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:src="@mipmap/ic_add_avatar_8a8a8a_120" />-->

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:id="@+id/iv_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorForImmersionTypeStatusBar"
            android:src="@mipmap/ic_avatar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="上传你的头像"
            android:textSize="12dp" />



        <android.support.design.widget.TextInputLayout
            android:id="@+id/ed_account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:counterEnabled="true">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_register_account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_login_ed"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp"
                android:hint="请输入学号/工号"
                android:drawableLeft="@mipmap/ic_account_1976d2_48"
                android:drawablePadding="10dp"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ed_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_account_layout"
            app:counterEnabled="true"
            app:passwordToggleDrawable="@mipmap/ic_show_password_8a8a8a_24"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorPrimary">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_register_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_login_ed"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@mipmap/ic_password_1976d2_48"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:hint="请输入密码"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="注       册"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:background="@drawable/shape_login_btn"/>

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="已有账号? 直接登录"
            android:textColor="@color/colorForImmersionTypeStatusBar"
            android:textSize="14dp" />

    </LinearLayout>


</RelativeLayout>
